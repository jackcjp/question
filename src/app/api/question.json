        "rest_auth": {
            "type": "oauth2",
            "authorizationUrl": "http://id.leadstec.com/auth/",
            "flow": "implicit",
            "scopes": {
                "write_rest": "modify rest in your account",
                "read_rest": "read your rest"
            }
        }
