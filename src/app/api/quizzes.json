            "get": {
                "tags": [
                    "api"
                ],
                "summary": "Get the api json file",
                "description": "json 格式文档",
                "operationId": "getApi",
                "parameters": [
                    {
                        "in": "path",
                        "name": "filename",
                        "description": "api文档的名字",
