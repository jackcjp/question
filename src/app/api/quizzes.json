        "/quizzes": {
            "get": {
                "tags": [
                    "quiz"
                ],
                "summary": "Get the quizzes list by condition",
                "description": "",
                "operationId": "getQuizzes",
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "title",
                        "description": "the name of the quiz",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "in": "query",
                        "name": "job_id",
                        "description": "the job_id of the quiz",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "in": "query",
                        "name": "count",
                        "description": "页码",
                        "required": false,
                        "type": "number"
                    },
                    {
                        "in": "query",
                        "name": "limit",
                        "description": "每页数量",
                        "required": false,
                        "type": "number"
                    },
                    {
                        "in": "query",
                        "name": "sort",
                        "description": "排序方式，如：`createdOn(default)/-createdOn/(-)title`",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success operation",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Quizzes"
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "quiz"
                ],
                "summary": "Add a new quiz",
                "description": "",
                "operationId": "addQuiz",
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
