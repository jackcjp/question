                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "quizId",
                        "description": "ID of quiz that needs to be updated",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "",
                        "required": false,
                        "schema": {
                            "$ref": "#/definitions/Quizzes"
                        }
                    },
                    {
                        "in": "query",
                        "name": "flag",
                        "description": "detemine to add or remove question id in question_list, value is `remove`, null means added in default",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success updated!",
                        "schema": {
                            "$ref": "#/definitions/Quizzes"
                        }
                    },
                    "405": {
                        "description": "Invalid input"
                    }
                },
                "security": [
                    {
                        "rest_auth": [
                            "write_rest",
                            "read_rest"
                        ]
                    }
                ]
            },
            "delete": {
                "tags": [
                    "quiz"
                ],
                "summary": "Delete a quiz",
                "description": "",
                "operationId": "deleteQuiz",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "quizId",
                        "description": "Delete by Quiz Id",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success deleted!"
                    },
                    "400": {
                        "description": "Invalid quiz value"
                    }
                },
                "security": [
                    {
                        "rest_auth": [
                            "write_rest",
                            "read_rest"
                        ]
                    }
                ]
            }
        }
    },
    "securityDefinitions": {
        "api_key": {
            "type": "apiKey",
